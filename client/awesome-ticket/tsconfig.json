{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@type": ["shims-vue"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      "@nuxtjs/axios",
      "@nuxtjs/moment",
      "./shims-vue"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
