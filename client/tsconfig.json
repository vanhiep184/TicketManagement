{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@type": ["index", "shims-vue", "shims-tsx"]
    },
    "types": [
      "jest",
      "@types/node",
      "@nuxt/vue-app",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      "@types/webpack-env",
      "@nuxtjs/moment",
      "@nuxtjs/axios",
      "./index",
      "./shims-vue",
      "./shims-tsx"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
